@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["BigTitle"] = Contest.ShortName;
    var initial = DateTimeOffset.Now.ToUnixTimeMilliseconds();
    var now = initial / 1000;
    var startTime = Contest.StartTime?.ToUnixTimeSeconds() ?? -1;
    var endTime = (Contest.StartTime + Contest.EndTime)?.ToUnixTimeSeconds() ?? -1;
    if (ViewData.ContainsKey("InJury")) { ViewData["AjaxUpdateUrl"] = Url.Action("Updates", "Jury"); }
    var prog = startTime == -1 || initial / 1000 < startTime ? 0
        : now >= endTime ? 100 : (now - startTime) * 100.0 / (endTime - startTime);
}

@section Clocking {
    <div class="navbar-text" style="white-space:nowrap;">
        <i style="padding-left: 10px;" class="fas fa-clock"></i>
        <span id="timeleft"></span>
    </div>

    <script type="text/javascript">
        var initial = @now;
        var activatetime = 1500000000;
        var starttime = @startTime;
        var endtime = @endTime;
        var offset = 0;
        var date = new Date(@initial);
        var timeleftelt = document.getElementById("timeleft");

        setInterval(function () { updateClock(); }, 1000);
        updateClock();
    </script>
}

@section Banner {
<razor asp-show-if="@(prog > 0 && prog < 100)">
    <div class="progress" style="margin-top:-9px; height: 10px; margin-bottom: 9px" data-progress-bar>
        <div class="progress-bar" role="progressbar" style="width: @(prog)%;"
                aria-valuenow="@prog" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <style type="text/css" asp-show-if="@((string)ViewContext.RouteData.Values["controller"] == "Team")">
        @@media(min-width: 768px) {
            body { padding-top: 4.066666rem; }
        }
    </style>
</razor>
}

@section Header {
    @RenderSection("Header", required: false)
}

@section Footer {
    @RenderSection("Footer", required: false)
}

@section BannerFooter {
    @RenderSection("BannerFooter", required: false)
}

@section Scripts {
    @RenderSection("Scripts", required: false)
}

@RenderBody()
