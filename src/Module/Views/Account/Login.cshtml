@model SatelliteSite.IdentityModule.Models.LoginModel
@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Sign In</title>
    <link rel="icon" href="/demoweb/favicon.ico?v=8.0.0DEV">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/lib/font-awesome/css/all.min.css" />
    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/xylab/domjudge.js"></script>
    <script src="/lib/xylab/xylab.js"></script>
    <style>
        html, body { height: 100%; }
        body { display: -ms-flexbox; display: -webkit-box; display: flex; -ms-flex-align: center; -ms-flex-pack: center; -webkit-box-align: center; align-items: center; -webkit-box-pack: center; justify-content: center; padding-top: 40px; padding-bottom: 40px; background-color: #f5f5f5; }
        .form-signin { width: 100%; max-width: 330px; padding: 15px; margin: 0 auto; }
        #loginform { text-align: center; }
        .form-signin .form-control:focus { z-index: 2; }
        .form-signin .form-control { position: relative; box-sizing: border-box; height: auto; padding: 10px; font-size: 16px; }
    </style>
</head>
<body>
    <div class="form-signin" id="loginform">
        <h1 class="mb-4" style="font-family:Roboto, Arial, Helvetica, sans-serif;">@Contest.ShortName</h1>
        <div class="ml-2 regularLoginform">
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <div asp-show-if="!ViewContext.ModelState.IsValid" class="alert alert-danger text-left">
            @{ var errors = ViewContext.ModelState.SelectMany(e => e.Value.Errors).ToList(); }
            @for (int i = 0; i < errors.Count; i++)
            {
                if (i > 0) {<br />}
                @errors[i].ErrorMessage
            }
            </div>
            <form asp-action="Login" method="post">
                <div style="min-height: 105px;">
                    <label asp-for="Username" class="sr-only"></label>
                    <input asp-for="Username" class="form-control" style="margin-bottom: -1px; border-bottom-right-radius: 0; border-bottom-left-radius: 0;" placeholder="Username" required autofocus />
                    <label asp-for="Password" class="sr-only"></label>
                    <input asp-for="Password" class="form-control" style="margin-bottom: 10px; border-top-left-radius: 0; border-top-right-radius: 0;" placeholder="Password" required autocomplete="current-password" />
                </div>
                <button class="btn btn-lg btn-primary btn-block" style="margin-top: 11px;" type="submit">Sign in</button>
            </form>
        </div>
        <p class="mt-5 mb-3 text-muted">&copy; 2019-2021</p>
    </div>
</body>
</html>
