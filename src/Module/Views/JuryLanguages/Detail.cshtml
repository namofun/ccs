@model JuryViewLanguageModel
@{
    ViewData["Title"] = "Language " + Model.Language.Name;
}

<h2 class="mt-2">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-lg-4">
        <table class="table table-sm table-striped">
            <tr>
                <th>ID</th>
                <td>@Model.Language.Id</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Language.Name</td>
            </tr>
            <tr>
                <th>Allow submit</th>
                <td>@(Model.Language.AllowSubmit ? "Yes" : "No")</td>
            </tr>
            <tr>
                <th>Allow judge</th>
                <td>@(Model.Language.AllowJudge ? "Yes" : "No")</td>
            </tr>
            <tr>
                <th>Time factor</th>
                <td>@(Model.Language.TimeFactor)&times;</td>
            </tr>
            <tr>
                <th>Compile script</th>
                <td><a asp-area="Dashboard" asp-controller="Executables" asp-action="Detail" asp-route-execid="@Model.Language.CompileScript">@Model.Language.CompileScript</a></td>
            </tr>
            <tr>
                <th>File extension</th>
                <td>Main.@Model.Language.FileExtension</td>
            </tr>
        </table>
    </div>
</div>

<h3 class="mt-3">Submissions</h3>
<vc:solution-list model="Model.Solutions" show-ip="false" show-teams="true" show-problems="true" show-languages="false" />
