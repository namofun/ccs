@model JuryViewCategoryModel
@{
    ViewData["Title"] = "Category: " + Model.Category.Name;
}

<h2 class="mt-2">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-lg-4">
        <table class="table table-sm table-striped">
            <tr>
                <th>ID</th>
                <td>@Model.Category.Id</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Category.Name</td>
            </tr>
            <tr>
                <th>Sortorder</th>
                <td>@Model.Category.SortOrder</td>
            </tr>
            <tr>
                <th>Color</th>
                <td style="background:@Model.Category.Color">@Model.Category.Color</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>@(Model.Category.IsPublic ? "Yes" : "No")</td>
            </tr>
        </table>
    </div>
</div>

<p>
    <a asp-action="Edit" class="btn btn-primary" title="Edit"><i class="fas fa-edit"></i>&nbsp;Edit</a>
    <a asp-action="Delete" class="btn btn-danger" title="Delete" data-toggle="ajaxWindow" data-target="deleteCategory"><i class="fas fa-trash-alt"></i>&nbsp;Delete</a>
</p>

@if (Model.Teams.Any())
{
<h3>Teams</h3>
<div class="row">
<div class="col-lg-4">
<table class="data-table table table-sm table-striped table-hover">
<thead>
    <tr>
        <th>ID</th>
        <th>team name</th>
    </tr>
</thead>
<tbody>
@foreach (var team in Model.Teams)
{
    <tr asp-controller="JuryTeams" asp-action="Detail" asp-route-teamid="@team.TeamId">
        <td use-a>@team.TeamId</td>
        <td use-a>@team.TeamName</td>
    </tr>
}
</tbody>
</table>
</div>
</div>
}
