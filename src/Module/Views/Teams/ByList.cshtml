@model AddTeamByListModel
@{
    Layout = "_WindowLayout";
    var ctx = Context.GetContestContext();
    var affs = await ctx.FetchAffiliationsAsync(false);
    var cats = await ctx.FetchCategoriesAsync(false);
    ViewData["Title"] = "Batch team register";
}

<div class="form-group">
    <label asp-for="AffiliationId"></label>
    <select required class="form-control custom-select form-control" asp-for="AffiliationId" asp-items="@affs.Values.Select(a => new SelectListItem(a.Name, $"{a.Id}"))"></select>
</div>
<div class="form-group">
    <label asp-for="CategoryId"></label>
    <select required class="form-control custom-select form-control" asp-for="CategoryId" asp-items="@cats.Values.Select(c => new SelectListItem(c.Name, $"{c.Id}"))"></select>
</div>
<div class="form-group">
    <label asp-for="TeamNames"></label>
    <textarea asp-for="TeamNames" class="form-control" style="min-height:20em"></textarea>
    <small class="text-muted mt-2">队伍名称，每个一行，区分大小写和空格，提交后会绑定新用户并重置密码。</small>
</div>

@section Footer {
    <button type="submit" class="btn btn-primary" asp-action="ByListConfirmation">Submit</button>
}
