@{
    ViewData["Title"] = "About this contest";
    IReadOnlyDictionary<int, Tenant.Entities.Category> cats = ViewBag.Categories;
    IReadOnlyDictionary<int, Tenant.Entities.Affiliation> affs = ViewBag.Affiliations;
}

<hgroup class="mb-3">
    <h1 class="mt-2">
        Contest <span>@Contest.ShortName</span>
    </h1>
    <h4 class="text-left">@Contest.Name</h4>
</hgroup>

<div class="row">
    <div class="col-lg-7">
        <p>
            <span class="sol">Registration</span> <misc-status type="RegistrationStatus" value="Contest.Settings.RegisterCategory?.Count ?? 0" /><br />
            <span class="sol">Rule</span> <misc-status type="ContestRule" value="Contest.RankingStrategy" />
        </p>
        @Html.Raw(ViewBag.Markdown)
    </div>
    <div class="col-lg-4">
        <h3 class="mt-4">Team info</h3>
        @if (Contest.Team == null)
        {
            <p>You didn't register for this contest.</p>
            @if ((Contest.Settings.RegisterCategory?.Count ?? 0) > 0)
            {
                <form method="post" asp-action="Register">
                    <button class="btn btn-primary" type="submit">Register</button>
                </form>
            }
        }
        else
        {
            <table class="table table-sm table-striped">
                <tr>
                    <th>Name</th>
                    <td>@Contest.Team.TeamName</td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>@(cats.GetValueOrDefault(Contest.Team.CategoryId)?.Name)</td>
                </tr>
                <tr>
                    <th>Affiliation</th>
                    <td>@(affs.GetValueOrDefault(Contest.Team.AffiliationId)?.Name ?? "none")</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td><verdict0 type="TeamStatus" value="team.Status" /></td>
                </tr>
            </table>
        }
    </div>
</div>
