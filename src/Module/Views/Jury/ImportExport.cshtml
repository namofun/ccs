@inject IMenuProvider Menu 
@{
    ViewData["Title"] = "Import and export";
}

<h2 class="mt-2">@ViewData["Title"]</h2>

<style>
.importexport div.tile {
  background-color: aliceblue;
  padding: 1.5rem;
  border-radius: .5rem;
  border: 1px solid #aad7ff;
}

.importexport div.tile h3 {
  font-size: 22px;
}
</style>

<div class="row">
    <div class="col-12 col-md-6">
        <div class="alert alert-warning">
            <b>Warning!</b> Exporting documents may increase the load of server.
        </div>
    </div>
</div>

<div class="importexport">
    @await Menu.Extend(CcsDefaults.ComponentImportExport).RenderAsync(Component)
</div>