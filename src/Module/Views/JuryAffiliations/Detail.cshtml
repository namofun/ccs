@model JuryViewAffiliationModel
@{
    ViewData["Title"] = "Affiliation: " + Model.Affiliation.Name;
}

<h2 class="mt-2">@ViewData["Title"]</h2>

<div class="row">
<div class="col-lg-4">
<table class="table table-sm table-striped">
    <tr>
        <th>ID</th>
        <td>@Model.Affiliation.Id</td>
    </tr>
    <tr>
        <th>Shortname</th>
        <td>@Model.Affiliation.Abbreviation</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Affiliation.Name</td>
    </tr>
    <tr>
        <th>Country</th>
        <td>@(Model.Affiliation.CountryCode ?? "(none)")</td>
    </tr>
    <tr>
        <th>Student email suffix</th>
        <td>@(Model.Affiliation.EmailSuffix ?? "(none)")</td>
    </tr>
    <tr>
        <th>Logo</th>
        <td><img src="~/images/affiliations/@(Model.Affiliation.Abbreviation).png" width="40" height="40" /></td>
    </tr>
</table>
</div>
</div>

@if (Model.Teams.Any())
{
<h3>Teams</h3>
<div class="row">
<div class="col-lg-4">
<table class="data-table table table-sm table-striped table-hover">
<thead>
    <tr>
        <th>ID</th>
        <th>team name</th>
    </tr>
</thead>
<tbody>
@foreach (var team in Model.Teams)
{
    <tr asp-action="Detail" asp-route-teamid="@team.TeamId">
        <td use-a>@team.TeamId</td>
        <td use-a>@team.TeamName</td>
    </tr>
}
</tbody>
</table>
</div>
</div>
}
