@namespace SatelliteSite.ContestModule.Components.ProblemUsage
@using Ccs.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, SatelliteSite.Substrate
@model IReadOnlyList<Problem2Model>

<h3 class="mt-3">Contests</h3>

<div class="row">
    <div class="col-md-6">
        <table class="data-table table table-hover table-striped table-sm">
            <thead class="thead-light">
                <tr>
                    <th>CID</th>
                    <th>Contest<br />shortname</th>
                    <th>Contest<br />name</th>
                    <th>Problem<br />shortname</th>
                    <th>Allow<br />submit</th>
                    <th>Colour</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prob in Model)
                {
                    <tr asp-action="Detail" asp-controller="JuryProblems" asp-area="Contest" asp-route-cid="@prob.ContestId" asp-route-probid="@prob.ProblemId">
                        <td use-a>c@(prob.ContestId)</td>
                        <td use-a>@prob.BigTitle</td>
                        <td use-a>@prob.Title</td>
                        <td use-a>@prob.ShortName</td>
                        <td use-a>@(prob.AllowSubmit ? "Yes" : "No")</td>
                        <td title="@prob.Color"><div class="circle" style="background-color: @prob.Color"></div></td>
                    </tr>
                }
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="6">No data available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
